<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        card_view:cardBackgroundColor="@color/cardview_background"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:id="@+id/card_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:paddingTop="13dp"

                android:text="Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for youHello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for youHello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for youHello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for youHello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you,Hello I am waiting for you"
                android:textColor="@color/color_main_content"
                android:textSize="17dp" />

            <RelativeLayout
                android:id="@+id/card_end"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/list_content"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <!-- 左边时间显示部分-->
                <ImageView
                    android:id="@+id/pic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/note_list_card_create_time_icon" />

                <TextView
                    android:id="@+id/list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:text="2017.03.29 15:40"
                    android:textColor="@color/color_main_time_location"
                    android:textSize="12dp" />


                <!-- 右边地点显示部分 -->
                <TextView
                    android:id="@+id/note_list_card_location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="南昌市"
                    android:textColor="@color/color_main_time_location"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/pic_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="37dp"
                    android:layout_marginRight="37dp"
                    android:src="@drawable/note_list_card_create_location_icon" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>